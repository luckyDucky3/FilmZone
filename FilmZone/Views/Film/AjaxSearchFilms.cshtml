@using FilmZone.Domain.Enum
@model List<FilmZone.Domain.ViewModels.FilmViewModel>
@{
    string filmDesc;
    int currentId = ViewBag.id;
}
@foreach (var film in Model)
{
    <div class="InfoFilm">
        <div class="LeftInfo">
            <img src="@Url.Content(film.PathToImage)" />
            <div class="LeftOption">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M259.3 17.8L194 150.2 47.9 171.5c-26.2 3.8-36.7 36.1-17.7 54.6l105.7 103-25 145.5c-4.5 26.3 23.2 46 46.4 33.7L288 439.6l130.7 68.7c23.2 12.2 50.9-7.4 46.4-33.7l-25-145.5 105.7-103c19-18.5 8.5-50.8-17.7-54.6L382 150.2 316.7 17.8c-11.7-23.6-45.6-23.9-57.4 0z" /></svg>
                <span id="rating">@film.Rating</span>
            </div>
        </div>
        <h2>@film.Name</h2>
        @{
            if (film.Description.Length > 320)
            {
                filmDesc = film.Description[..320] + "...";
            }
            else
            {
                filmDesc = film.Description;
            }
        }
        @filmDesc
        <form method="get" action="/Film/SearchById/@film.Id">
            <button type="submit" class="Button">Смотреть</button>
        </form>
        
    </div>
}

@if (!ViewBag.End)
{
    <form id="loadMoreForm" method="get">
        <input type="hidden" name="currentId" value='@currentId' />
        <button type="submit" id="ButtonWatchMore">Смотреть еще</button>
    </form>
}
<input type="hidden" id="newCurrentId" value="@currentId" />