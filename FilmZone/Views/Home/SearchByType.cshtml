@model List<FilmZone.Domain.ViewModels.FilmViewModel>
@{
    
    string filmDesc;
}
<div class="Content">
    <h2>@ViewData["Type"]</h2>
    @foreach (var film in Model)
    {
        <div class="InfoFilm">
            <img src="@Url.Content(film.PathToImage)" />
            @{
                if (film.Description.Length > 350)
                {
                    filmDesc = film.Description[..350] + "...";
                }
                else
                {
                    filmDesc = film.Description;
                }
            }
            @filmDesc
            <form method="get" action="/Home/SearchById/@film.Id">
                <button type="submit" class="Button">Смотреть</button>
            </form>
        </div>
    }
</div>